<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@android:color/white">
    <TextView android:layout_width="match_parent" android:layout_height="36dp" android:gravity="center"
        android:textSize="16sp" android:text="@string/satellites" android:textColor="@android:color/black" />
    <FrameLayout android:layout_width="match_parent" android:layout_height="1dp"
        android:background="@android:color/black" />
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_margin="8dp">
        <FrameLayout android:id="@+id/frame" android:layout_height="180dp" android:layout_width="180dp" />
        <TextView android:id="@+id/satellites" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="14sp" android:textColor="@android:color/black" />
        <TextView android:id="@+id/coordinates" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="14sp" android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>